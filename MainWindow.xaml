<Window x:Class="NorthvilleLibrary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NorthvilleLibrary"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>


        <MediaElement Name="mediaElement" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                  LoadedBehavior="Manual" UnloadedBehavior="Manual"   Stretch="UniformToFill" Margin="0"  MediaEnded="MediaElement_MediaEnded" />

        <!-- Other content on top of the video -->

        <Rectangle Fill="Black" Opacity="0.5" HorizontalAlignment="Left" Height="191" Margin="229,111,0,0" Stroke="Black" StrokeThickness="10" VerticalAlignment="Top" Width="354" />
        <Button Content="Login" FontFamily="times new roman" Background="Brown"  BorderBrush="Firebrick" 
    BorderThickness="1"  HorizontalAlignment="Left" Margin="346,256,0,0" VerticalAlignment="Top" Click="login_btn_Click" Height="32" Width="120" Foreground="AntiqueWhite"/>
        <TextBox x:Name = "user_txt"  HorizontalAlignment="Left" Margin="400,155,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" Background="Beige"/>
        <PasswordBox x:Name = "pass_txt"  HorizontalAlignment="Left" Margin="400,217,0,0" VerticalAlignment="Top" Width="120" Background="Beige"/>
        <Label Content="E-mail" HorizontalAlignment="Left" Margin="289,149,0,0" VerticalAlignment="Top" FontFamily= "times new roman" FontSize="17" Foreground="AntiqueWhite" FontWeight="Bold"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="289,211,0,0" VerticalAlignment="Top" FontFamily="times new roman" FontSize="17" Foreground="AntiqueWhite" FontWeight="Bold"  />



    </Grid>
</Window>
