<Window x:Class="NorthvilleLibrary.StaffWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NorthvilleLibrary"
        mc:Ignorable="d"
        Title="StaffWindow" Height="500" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Height="500" Width="800">
        <Grid x:Name="grid_Students" Height="500" Width="593" Margin="207,-18,0,18" Visibility="Hidden">
            <Label x:Name="lbl_Name" Content="Staff" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"/>
            <StackPanel Margin="296,66,149,50" Orientation="Vertical" Background="Silver" RenderTransformOrigin="0.5,0.5">
                <Label Content="Student_ID" HorizontalAlignment="Center"/>
                <TextBox x:Name="tbx_Student_ID" TextWrapping="Wrap" Text="" Width="120" IsReadOnly="True"/>
                <Label Content="Student_Surname" HorizontalAlignment="Center"/>
                <TextBox x:Name="tbx_Student_Surname" TextWrapping="Wrap" Text="" Width="120" IsReadOnly="True"/>
                <Label Content="Student_FirstName" HorizontalAlignment="Center"/>
                <TextBox x:Name="tbx_Student_FirstName" TextWrapping="Wrap" Text="" Width="120" IsReadOnly="True"/>
                <Label Content="Student_Course_ID" HorizontalAlignment="Center"/>
                <TextBox x:Name="tbx_Student_Course_ID" TextWrapping="Wrap" Text="" Width="120" IsReadOnly="True"/>
                <Label Content="Student_ContactNo" HorizontalAlignment="Center"/>
                <TextBox x:Name="tbx_Student_ContactNo" TextWrapping="Wrap" Text="" Width="120" IsReadOnly="True"/>
                <Label Content="Student_Email" HorizontalAlignment="Center"/>
                <TextBox x:Name="tbx_Student_Email" TextWrapping="Wrap" Text="" Width="120" IsReadOnly="True"/>
                <Label Content="Student_Password" HorizontalAlignment="Center"/>
                <TextBox x:Name="tbx_Student_Password" TextWrapping="Wrap" Text="" Width="120" IsReadOnly="True"/>
            </StackPanel>
            <StackPanel Margin="10,79,323,341" Orientation="Horizontal" Background="Silver" Height="30">
                <Label Content="Student ID: "/>
                <TextBox x:Name="tbx_Search_Student_ID" TextWrapping="Wrap" Text="" Width="120"/>
                <Button x:Name="Search" Content="Search" Margin="5,0,5,0" Click="Search_Click"/>
            </StackPanel>
            <Button x:Name="btn_LogOut" Content="Log Out" HorizontalAlignment="Left" Margin="729,26,0,0" VerticalAlignment="Top" Click="btn_LogOut_Click"/>
            <ListBox x:Name="lbx_AllStudents" Margin="10,145,323,71" SelectionChanged="lbx_SelectionChanged"/>
            <Button x:Name="Edit" Content="Edit" HorizontalAlignment="Left" Margin="464,105,0,0" VerticalAlignment="Top" Width="96" Click="Edit_Click"/>
            <Button x:Name="Add" Content="Add" HorizontalAlignment="Left" Margin="464,80,0,0" VerticalAlignment="Top" Width="96" Click="Add_Click" Height="20"/>
            <Button x:Name="Delete" Content="Delete" HorizontalAlignment="Left" Margin="464,130,0,0" VerticalAlignment="Top" Width="96" Click="Delete_Click" Height="20"/>
            <Button x:Name="btn_Save_Students" Content="Save" HorizontalAlignment="Left" Margin="464,80,0,0" VerticalAlignment="Top" Width="96" Click="btn_Student_Save" Height="20" Visibility="Hidden"/>
        </Grid>
        <Rectangle HorizontalAlignment="Left" Height="490" VerticalAlignment="Top" Width="207" Fill="#FF989898"/>
        <Grid x:Name="grid_Books" Height="500" Width="593" Margin="207,-18,0,18" Visibility="Hidden">
            <StackPanel Margin="296,66,149,50" Orientation="Vertical" Background="Silver" RenderTransformOrigin="0.5,0.5">
                <Label Content="Book_ID" HorizontalAlignment="Center"/>
                <TextBox x:Name="tbx_Book_ID" TextWrapping="Wrap" Text="" Width="120" IsReadOnly="True"/>
                <Label Content="Book Name" HorizontalAlignment="Center"/>
                <TextBox x:Name="tbx_Book" TextWrapping="Wrap" Text="" Width="120" IsReadOnly="True"/>
                <Label Content="Book Author" HorizontalAlignment="Center"/>
                <TextBox x:Name="tbx_Book_Author" TextWrapping="Wrap" Text="" Width="120" IsReadOnly="True"/>
                <Label Content="Book ISBN" HorizontalAlignment="Center"/>
                <TextBox x:Name="tbx_Book_ISBN" TextWrapping="Wrap" Text="" Width="120" IsReadOnly="True"/>
                <Label Content="Book Publication Date" HorizontalAlignment="Center"/>
                <TextBox x:Name="tbx_Book_Publication_Date" TextWrapping="Wrap" Text="" Width="120" IsReadOnly="True"/>
                <Label Content="Book Genre" HorizontalAlignment="Center"/>
                <TextBox x:Name="tbx_Book_Genre" TextWrapping="Wrap" Text="" Width="120" IsReadOnly="True"/>
                <Label Content="Book_Copies" HorizontalAlignment="Center"/>
                <TextBox x:Name="tbx_Book_Copies" TextWrapping="Wrap" Text="" Width="120" IsReadOnly="True"/>
            </StackPanel>
            <StackPanel Margin="10,79,323,341" Orientation="Horizontal" Background="Silver" Height="30">
                <Label Content="Book ID: "/>
                <TextBox x:Name="tbx_Search_Book_ID" TextWrapping="Wrap" Text="" Width="120"/>
                <Button x:Name="btn_Search_Book" Content="Search" Margin="5,0,5,0" Click="Search_Click"/>
            </StackPanel>
            <Button x:Name="btn_LogOut_Book" Content="Log Out" HorizontalAlignment="Left" Margin="729,26,0,0" VerticalAlignment="Top" Click="btn_LogOut_Click"/>
            <ListBox x:Name="lbx_AllBooks" Margin="10,145,323,71" SelectionChanged="lbx_SelectionChanged"/>
            <Button x:Name="btn_Edit_Book" Content="Edit" HorizontalAlignment="Left" Margin="464,105,0,0" VerticalAlignment="Top" Width="96" Click="Edit_Click"/>
            <Button x:Name="btn_Add_Book" Content="Add" HorizontalAlignment="Left" Margin="464,80,0,0" VerticalAlignment="Top" Width="96" Click="Add_Click" Height="20"/>
            <Button x:Name="btn_Delete_Book" Content="Delete" HorizontalAlignment="Left" Margin="464,130,0,0" VerticalAlignment="Top" Width="96" Click="Delete_Click" Height="20"/>
            <Button x:Name="btn_Save_Book" Content="Save" HorizontalAlignment="Left" Margin="464,80,0,0" VerticalAlignment="Top" Width="96" Click="btn_Book_Save_Click" Height="20" Visibility="Hidden"/>
        </Grid>
        <Grid x:Name="grid_Transaction_Borrow" Height="500" Width="593" Margin="207,-18,0,18" Visibility="Visible">
            <StackPanel Margin="296,28,149,0" Orientation="Vertical" Background="Silver" RenderTransformOrigin="0.5,0.5">
                <Label Content="Borrow_ID" HorizontalAlignment="Center"/>
                <TextBox x:Name="tbx_Borrow_ID" TextWrapping="Wrap" Text="" Width="120" IsReadOnly="True"/>
                <Label Content="Book ID" HorizontalAlignment="Center"/>
                <TextBox x:Name="tbx_Borrow_Book_ID" TextWrapping="Wrap" Text="" Width="120" IsReadOnly="True"/>
                <Label Content="Borrow Date" HorizontalAlignment="Center"/>
                <TextBox x:Name="tbx_Borrow_Date" TextWrapping="Wrap" Text="" Width="120" IsReadOnly="True"/>
                <Label Content="Due Date" HorizontalAlignment="Center"/>
                <TextBox x:Name="tbx_Borrow_Due_Date" TextWrapping="Wrap" Text="" Width="120" IsReadOnly="True"/>
                <Label Content="Return Date" HorizontalAlignment="Center"/>
                <TextBox x:Name="tbx_Borrow_Return_Date" TextWrapping="Wrap" Text="" Width="120" IsReadOnly="True"/>
                <Label Content="Borrow Fee" HorizontalAlignment="Center"/>
                <TextBox x:Name="tbx_Borrow_Fee" TextWrapping="Wrap" Text="" Width="120" IsReadOnly="True"/>
                <Label Content="Transaction ID" HorizontalAlignment="Center"/>
                <TextBox x:Name="tbx_Transaction_ID" TextWrapping="Wrap" Text="" Width="120" IsReadOnly="True"/>
                <Label Content="Student ID" HorizontalAlignment="Center"/>
                <TextBox x:Name="tbx_Transaction_Student_ID" TextWrapping="Wrap" Text="" Width="120" IsReadOnly="True"/>
                <Label Content="Staff ID" HorizontalAlignment="Center"/>
                <TextBox x:Name="tbx_Transaction_Staff_ID" TextWrapping="Wrap" Text="" Width="120" IsReadOnly="True"/>
                
            </StackPanel>
            <StackPanel Margin="10,79,323,341" Orientation="Horizontal" Background="Silver" Height="30">
                <Label Content="Transaction ID: "/>
                <TextBox x:Name="tbx_Search_Transaction_ID" TextWrapping="Wrap" Text="" Width="120"/>
                <Button x:Name="btn_Search_Transaction" Content="Search" Margin="5,0,5,0" Click="Search_Click"/>
            </StackPanel>
            <Button x:Name="btn_LogOut_Transaction" Content="Log Out" HorizontalAlignment="Left" Margin="729,26,0,0" VerticalAlignment="Top" Click="btn_LogOut_Click"/>
            <ListBox x:Name="lbx_AllTransaction" Margin="10,145,323,71" SelectionChanged="lbx_SelectionChanged"/>
            <Button x:Name="btn_Edit_Transaction" Content="Edit" HorizontalAlignment="Left" Margin="464,105,0,0" VerticalAlignment="Top" Width="96" Click="Edit_Click"/>
            <Button x:Name="btn_Add_Transaction" Content="Add" HorizontalAlignment="Left" Margin="464,79,0,0" VerticalAlignment="Top" Width="96" Click="Add_Click" Height="20"/>
            <Button x:Name="btn_Delete_Transaction" Content="Delete" HorizontalAlignment="Left" Margin="464,130,0,0" VerticalAlignment="Top" Width="96" Click="Delete_Click" Height="20"/>
            <Button x:Name="btn_Save_Transaction" Content="Save" HorizontalAlignment="Left" Margin="464,80,0,0" VerticalAlignment="Top" Width="96" Click="btn_Transaction_Save_Click" Height="20" Visibility="Hidden"/>
        </Grid>
        <Button x:Name="btn_Student_Grid" Content="Students" HorizontalAlignment="Left" Margin="137,28,0,0" VerticalAlignment="Top" Click="btn_Student_Grid_Click"/>
        <Button x:Name="btn_Book_Grid" Content="Books" HorizontalAlignment="Left" Margin="137,67,0,0" VerticalAlignment="Top" Click="btn_Book_Grid_Click"/>
        <Button x:Name="btn_Transaction_Borrow_Grid" Content="Transactions" HorizontalAlignment="Left" Margin="121,111,0,0" VerticalAlignment="Top" Click="btn_Transaction_Borrow_Grid_Click"/>
        <Button x:Name="btn_Course_Grid" Content="Courses" HorizontalAlignment="Left" Margin="132,158,0,0" VerticalAlignment="Top" Click="btn_Courses_Grid_Click"/>
        <Grid x:Name="grid_Course" Height="500" Width="593" Margin="207,-18,0,18" Visibility="Hidden">
            <StackPanel Margin="296,57,149,147" Orientation="Vertical" Background="Silver" RenderTransformOrigin="0.5,0.5">
                <Label Content="Course ID" HorizontalAlignment="Center"/>
                <TextBox x:Name="tbx_Course_ID" TextWrapping="Wrap" Text="" Width="120" IsReadOnly="True"/>
                <Label Content="Course Description" HorizontalAlignment="Center"/>
                <TextBox x:Name="tbx_Course_Desc" TextWrapping="Wrap" Text="" Width="120" IsReadOnly="True"/>
            </StackPanel>
            <StackPanel Margin="10,79,323,341" Orientation="Horizontal" Background="Silver" Height="30">
                <Label Content="Course ID: "/>
                <TextBox x:Name="tbx_Search_Course_ID" TextWrapping="Wrap" Text="" Width="120"/>
                <Button x:Name="btn_Search_Course" Content="Search" Margin="5,0,5,0" Click="Search_Click"/>
            </StackPanel>
            <Button x:Name="btn_LogOut_Course" Content="Log Out" HorizontalAlignment="Left" Margin="729,26,0,0" VerticalAlignment="Top" Click="btn_LogOut_Click"/>
            <ListBox x:Name="lbx_AllCourse" Margin="10,145,323,71" SelectionChanged="lbx_SelectionChanged"/>
            <Button x:Name="btn_Edit_Course" Content="Edit" HorizontalAlignment="Left" Margin="464,105,0,0" VerticalAlignment="Top" Width="96" Click="Edit_Click"/>
            <Button x:Name="btn_Add_Course" Content="Add" HorizontalAlignment="Left" Margin="464,79,0,0" VerticalAlignment="Top" Width="96" Click="Add_Click" Height="20"/>
            <Button x:Name="btn_Delete_Course" Content="Delete" HorizontalAlignment="Left" Margin="464,130,0,0" VerticalAlignment="Top" Width="96" Click="Delete_Click" Height="20"/>
            <Button x:Name="btn_Save_Course" Content="Save" HorizontalAlignment="Left" Margin="464,79,0,0" VerticalAlignment="Top" Width="96" Click="btn_Course_Save_Click" Height="20" Visibility="Visible"/>
        </Grid>
    </Grid>
</Window>
